{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "es2017",
            "es7",
            "es6",
            "DOM"
        ],
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "src"
    ],
    "typedocOptions": {
        "entryPoints": [
            "src/index.ts"
        ],
        "out": "docs",
        "theme": "minimal"
    }
}